<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:util="http://www.springframework.org/schema/util"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

  <bean id="zohoCrmApiService" class="com.scandilabs.apps.zohocrm.service.ZohoCrmApiService">
  </bean>
  
   <!-- Daily email daemon -->
  <bean id="dailyEmailDaemon" class="com.scandilabs.apps.zohocrm.service.DailyEmailDaemon" init-method="init">
    <property name="zohoCrmApiService" ref="zohoCrmApiService" />
  </bean>
  
</beans>               